{
  "compilerOptions": {
    "incremental": true,
    "pretty": true,
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext", "dom"],
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "remove",
    "baseUrl": ".",
    "paths": {},
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src"]
}
